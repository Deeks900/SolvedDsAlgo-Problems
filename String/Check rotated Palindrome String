#include <iostream>
#include <string>
using namespace std;

bool isPalindrome(string str, int len){
    //Base Case
    if(len <= 0)
        return true;
    
    //small Calculation
    bool ans = false;
    if(str[0] == str[len-1]){
          ans = isPalindrome(str.substr(1, len-2), len-2);
    }
    else{
        return false;
    }
    return ans;
}

bool rotateStr(string str, int len){
    //Run A Loop to check every rotation of string
     for(int i = 0; i < len; i++){
      bool ans = isPalindrome(str, len);
        if(ans == true){
           return true; 
        }
        else{
            str = (str.substr(1) + str[0]); 
        }      
    }
    return false;
}

int main() {
    string check;
    cout << "Enter The String" << endl;
    cin >> check;
    
    bool ans = rotateStr(check, check.length());
    if(ans == true)
        cout << "true";
    else
        cout << "false";
    return 0;     
}
